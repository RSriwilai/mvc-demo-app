@Html.ValidationSummary()

@*Steg 4. SKAPA ETT FORMULÄR*@
<form asp-controller="Vehicles" asp-action="Create" method="POST">
    <div class="card">
        <div class="card-header">
            <h4>Registrera nytt fordon</h4>
        </div>
        <div class="card-body p-3">
            <div class="mb-3">
                <label class="form-label" asp-for="RegistrationNumber"></label>
                <input class="form-control" id="regNo" asp-for="RegistrationNumber">
                <span asp-validation-for="RegistrationNumber"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Make"></label>
                <input class="form-control"  asp-for="Make">
                <span asp-validation-for="Make"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Model"></label>
                <input class="form-control" asp-for="Model">
                <span asp-validation-for="Model"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="FuelType"></label>
                <input class="form-control" asp-for="FuelType">
                <span asp-validation-for="FuelType"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="GearType"></label>
                <input class="form-control" asp-for="GearType">
                <span asp-validation-for="GearType"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="ModelYear"></label>
                <input class="form-control" asp-for="ModelYear">
                <span asp-validation-for="ModelYear"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Mileage"></label>
                <input class="form-control" asp-for="Mileage">
                 <span asp-validation-for="Mileage"></span>
            </div>
            <div class="mb-3">
                <label asp-for="IsImported" class="form-label"></label>
                @Html.EditorFor(c => c.IsImported)
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Comment"></label>
                @* TAG HELPER *@
                <textarea asp-for="Comment" class="form-control" cols="30" rows="5"></textarea>

                @*Html.EditorFor(model => model.Comment, new {htmlAttributes = new {@class = "form-control"}})*@
            </div>
            <button id="save"type="submit" class="btn btn-primary">Registrera</button>
        </div>
    </div>
</form>

