@model IEnumerable<App.Entities.Vehicle>

<div>
    @section topSection {
        <h1>@ViewBag.message</h1>
    }
</div>
<a asp-action="Create">Registrera ny bil</a>
<hr>


<table class="table table-bordered table-striped table-hover table-sm">
    <thead class="table-dark">
        <tr>
            <th></th>
            <th>Registreringsnummer</th>
            <th>Tillverkare</th>
            <th>Modell</th>
            <th>Årsmodell</th>
            <th>Miltal</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
         @foreach (var item in Model){
        <tr>
            <td style="text-align:center;"><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Ändra</a></td>
            <td>@item.RegistrationNumber</td>
            <td>@item.Make</td>
            <td>@item.Model</td>
            <td>@item.ModelYear</td>
            <td>@item.Mileage</td>
            <th style="text-align:center;"><a asp-action="Details" asp-route-id="@item.Id"><i class="fal fa-info-circle"></i></a></th>
        </tr>
    }
    </tbody>
</table>

